<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ED440C"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.amarlabs.findblooddonors.HomeActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:id="@+id/wholelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:id="@+id/smartlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TableLayout
                    android:id="@+id/TableLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/TableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/sAccountSettingsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="16dip"
                            android:paddingBottom="5dip"
                            android:paddingTop="15dip"
                            android:text="Looking for blood?"
                            android:textColor="#4E0CF5"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="16dip"
                            android:paddingBottom="5dip"
                            android:paddingTop="15dip"
                            android:text="Go"
                            android:id="@+id/goButton"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/mobile_phone_pin_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/mobile_phone_pin_divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/div_horizontal"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/div_horizontal" />

            <View
                android:id="@+id/security_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_page"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/local_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/in_store_and_local_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/settings_header_content"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/local_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/local_donation"
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/imageView"-->
                            <!--android:layout_weight="2"-->
                            <!--android:paddingBottom="16dip"-->
                            <!--android:paddingLeft="10dip"-->
                            <!--android:paddingTop="16dip"-->
                            <!--android:paddingRight="10dip"-->
                            <!--android:src="@drawable/green"-->
                            <!--android:gravity="center" >-->
                        <!--</ImageView>-->

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/imageView1"-->
                            <!--android:layout_weight="2"-->
                            <!--android:paddingBottom="16dip"-->
                            <!--android:paddingLeft="10dip"-->
                            <!--android:paddingTop="16dip"-->
                            <!--android:paddingRight="10dip"-->
                            <!--android:gravity="center"-->
                            <!--android:src="@drawable/red" >-->
                        <!--</ImageView>-->


                        <TextView
                            android:id="@+id/youGaveDonationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingBottom="16dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="16dip"
                            android:paddingRight="10dip"
                            android:background="@drawable/green"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="25sp"
                            android:textColor="#000000" />

                        <View
                            android:id="@+id/mobile_divider"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:id="@+id/youOweDonationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingBottom="16dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="16dip"
                            android:paddingRight="10dip"
                            android:background="@drawable/red"
                            android:gravity="center"
                            android:text="2"
                            android:textSize="25sp"
                            android:textColor="#000000" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/local_donation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/imageView2"-->
                            <!--android:layout_weight="2"-->
                            <!--android:paddingBottom="16dip"-->
                            <!--android:paddingLeft="10dip"-->
                            <!--android:paddingTop="16dip"-->
                            <!--android:paddingRight="10dip"-->
                            <!--android:gravity="center"-->
                            <!--android:src="@drawable/grey" >-->
                        <!--</ImageView>-->

                        <TextView
                            android:id="@+id/yourProfileTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:paddingBottom="16dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="16dip"
                            android:paddingRight="10dip"
                            android:background="@drawable/grey"
                            android:gravity="center"
                            android:text="75%"
                            android:textSize="28sp"
                            android:textColor="#000000" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider_for_space"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/div_horizontal" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <TextView
                    android:id="@+id/paypal_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center_horizontal"
                    android:text="Disclaimer"
                    android:textColor="@color/settings_header_content"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/TableLayout2"
                    android:layout_below="@+id/disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >


                    <TableRow
                        android:id="@+id/TableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/i_receive_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:paddingBottom="16dip"
                            android:paddingLeft="10dip"
                            android:paddingTop="16dip"
                            android:text="@string/disclaimer_message"
                            android:textColor="@color/settings_content"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
